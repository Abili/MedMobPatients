<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pharmacy">

    <SearchView
        android:id="@+id/searchDrugs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".Pharmacy">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/drugsAdded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="List of Drugs"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:onClick="addDrugsTolist"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </LinearLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lisofDrugsrecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="condition"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/describeCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Desscribe briefly yur condition"
                android:inputType="textMultiLine" />
        </LinearLayout>
    </ScrollView>


    <Button
        android:onClick="orderForDrugs"
        android:id="@+id/orderDrugs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="20dp"
        android:background="@drawable/round"
        android:text="Order"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size" />

</LinearLayout>